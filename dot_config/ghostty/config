font-family = "MonaspiceKr Nerd Font"
font-family-bold-italic = "MonaspiceRn Nerd Font"
font-style-bold-italic = "Bold"
font-style-italic = "Medium"
font-family-italic = "MonaspiceRn Nerd Font"

window-decoration = false

window-padding-y = 0
window-padding-x = 0

keybind = ctrl+enter=unbind
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+q=quit

# Reference: https://fontdrop.info/#/?darkmode=true
# Disable *** ligature.
font-feature = "-dlig"
font-feature = "ss01"
font-feature = "ss02"
font-feature = "ss03"

# Underline is a bit high (especially for replace mode in fish shell).
adjust-underline-position = 2
# Tmux doesn't respond well to calculating grapheme widths correctly.
# TODO: Migrate away from tmux
grapheme-width-method = legacy

theme = "tokyonight-storm"
