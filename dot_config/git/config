[gpg]
	program = gpg
[core]
	editor = nvim-git
	pager = delta
	gpgpath = gpg
[maintenance]
	auto = false
	strategy = incremental
[checkout]
	workers = -1
[delta]
	navigate = true # use n and N to move between diff sections
	minus-style = syntax auto
	minus-emph-style = syntax auto
	tabs = 2
[diff]
	tool = vimdiff
[diff "vimdiff"]
	command = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = vimdiff
	conflictstyle = diff3
	directoryRenames = true
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[feature]
	manyFiles = true
[rebase]
	updateRefs = true
	autoStash = true
[rerere]
	enabled = true
	autoUpdate = true
[commit]
	gpgSign = true
[init]
	defaultBranch = main
[advice]
	skippedCherryPicks = false
	detachedHead = false
	mergeConflict = false
	forceDeleteBranch = false
[user]
	name = Peter Cardenas
